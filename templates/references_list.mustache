<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    {{#references}}
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading{{i}}">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{i}}"
                       aria-expanded="false" aria-controls="collapse{{i}}">
                        {{title}} <span class="badge pull-right">{{item_count}}</span>
                    </a>
                </h4>
            </div>
            <div id="collapse{{i}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{i}}">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Preview</th>
                        <th>Title</th>
                        <th>Timestamp</th>
                        <th>Interactions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#data}}
                        <tr>
                            <td>
                                <img src="{{reference_to_preview}}" alt="preview image"
                                     class="img-responsive" style="max-height: 60px;">

                            </td>
                            <td>{{reference_to_title}}</td>
                            <td>{{timestamp}}</td>
                            <td width="150">
                                <div class="btn-group btn-group-sm" role="group" aria-label="...">
                                    <a href="{{reference_to_uri}}" class="btn btn-default" target="_blank">
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                        Original
                                    </a>
                                    <a href="{{reference_from_uri}}" class="btn btn-default" target="_blank">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                        Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/data}}
                    </tbody>
                </table>
            </div>
        </div>
    {{/references}}

</div>